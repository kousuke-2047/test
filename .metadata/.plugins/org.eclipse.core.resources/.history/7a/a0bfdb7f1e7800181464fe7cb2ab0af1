$(document).ready(function(){
	$(".messagebox").hide();
});

$(function(){
	$(".selectbutton").hover(
			function(){
				$(this).css("background-color","lightgray");
				$(this).css("color","red");
			},
			function(){
				$(this).css("background-color","white");
				$(this).css("color","black");
			});
});

$(function(){
	$(".selectbutton").click(function(){
		$(".messagebox").hide();
	});
});

$(function(){
	$(".selectbox").hover(
			function(){
				$(this).css("background-color","lightgray");
				$(this).css("color","red");
			},
			function(){
				$(this).css("background-color","white");
				$(this).css("color","black");
			});
});

$(function(){
	$("td.selectbox").click(function(){
		$(".messagebox").fadeIn(0);
	});
});